<div class='container'>
  <nav>

    <a href="/authors"><h2>Authors</h2></a>
    {{#authors}}
    <a href="/authors/{{authors.id}}"><p>{{last_name}}</p></a>
    {{/authors}}

    <a href="/books"><h2>Books</h2></a>
    {{#title}}
    <a href="/books/{{id}}"><p>{{title}}</p></a>
    {{/title}}


  </nav>
  <article>

    {{#authors}}

    <div class='bookwrap'>
      <a href="/authors/{{id}}">
        <img class='portrait' src="{{portrait}}" />
      </a>

      <div class='authorinfowrap'>
        <a href="/authors/{{id}}">

          <h1>{{first_name}} {{last_name}}</h1>
        </a>
        <h3>{{titles}}</h3>
        <p>{{biography}}</p>
      </div>

    </div>

    {{/authors}}

  </article>

</div>
