<div class='container'>

  <nav>
    <a href="/authors"><h2>Authors</h2></a>
    {{#authors}}
    <a href="/authors/{{id}}"><p>{{last_name}}</p></a>
    {{/authors}}
    <a href="/books"><h2>Books</h2></a>
    {{#books}}
    <a href="/books/{{id}}"><p>{{title}}</p></a>
    {{/books}}
  </nav>



  <article>

    <form action="/authors/add" method="post">
      <table>
        <tr>
          <td>
            <h3>Add Author</h3>
          </td>
        </tr>

        <tr>
          <td>
            First Name
          </td>
          <td>
            <input type="text" name="first_name" value="">
          </td>
        </tr>

        <tr>
          <td>
            Last Name
          </td>
          <td>
            <input type="text" name="last_name" value="">
          </td>
        </tr>

        <tr>
          <td>
            Biography
          </td>
          <td>
            <input type="text" name="biography" value="">
          </td>
        </tr>

        <tr>
          <td>
            Portrait URL
          </td>
          <td>
            <input type="text" name="portrait" value="">
          </td>
        </tr>
        <tr>
          <td>
            <br>
          </td>
        </tr>

        <tr>
          <td>
            <input type="submit" value="submit">
          </td>
        </tr>

      </table>
    </form>



  </article>



</div>
